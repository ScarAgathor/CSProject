#include <stdio.h>
#include <stdbool.h>

// Global arrays or structs
char routes[100][100]; // Assuming a maximum of 100 routes
char vehicles[100][100]; // Assuming a maximum of 100 vehicles
char destinations[100][100]; // Assuming a maximum of 100 destinations

// Function prototypes
void getUserType(int* usertype);
void displayMenu(int usertype);
void selectOption(int option, int usertype);
void manageRoutes(char routes[][100]);
void manageVehicles(char vehicles[][100]);
void manageDestinations(char destinations[][100]);
void bookReservation(char destinations[][100]);
void bookVehicle(char vehicles[][100]);
void displayReceipt(int userType);

int main() {
    int usertype;
    getUserType(&usertype);
    displayMenu(usertype);
    displayReceipt(usertype);
    return 0;
}

// Function definitions

void getUserType(int* usertype) {
    // Prompt user to enter user type
    printf("Enter user type (1 for agent, 2 for customer): ");
    scanf("%d", usertype);

    // Check if userType is a valid option
    while (*usertype != 1 && *usertype != 2) {
        printf("Invalid option. Please enter 1 for agent or 2 for customer: ");
        scanf("%d", usertype);
    }
}

void displayMenu(int usertype) {
    int option;
    if (usertype == 1) {
        // Agent menu
        printf("Hello Agent\n");
        printf("Main menu options for Agents:\n");
        printf("1. Manage routes\n");
        printf("2. Manage Vehicles\n");
        printf("3. Manage destinations\n");
    } else {
        // Customer menu
        printf("Hello Customer\n");
        printf("Main menu options for Customer:\n");
        printf("1. Book passage\n");
        printf("2. Book cargo transport\n");
        printf("3. Manage reservations\n");
    }

    // Prompt user to select an option
    printf("Select an option: ");
    scanf("%d", &option);

    // Check if option selected is valid
    while ((usertype == 1 && (option < 1 || option > 3)) || (usertype == 2 && (option < 1 || option > 3))) {
        printf("Invalid option. Please select a valid option: ");
        scanf("%d", &option);
    }

    // Call selectOptions
    selectOption(option, usertype);
}

void selectOption(int option, int usertype) {
    if (usertype == 1) {
        // Agent options
        if (option == 1) {
            manageRoutes(routes);
        } else if (option == 2) {
            manageVehicles(vehicles);
        } else if (option == 3) {
            manageDestinations(destinations);
        }
    } else {
        // Customer options
        if (option == 1) {
            bookReservation(destinations);
        } else if (option == 2) {
            bookVehicle(vehicles);
        } else if (option == 3) {
            // manageReservations();
        }
    }
}

